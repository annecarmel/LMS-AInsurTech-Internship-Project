<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ALMS</title>

    <!-- Fonts & Styles -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- ✅ Header Starts -->
    <header>
        <div class="nav_background">
            <div class="container">
                <div class="nav_emp">
                    <div class="logo">
                        <a href="#"><img src="~/img/ai2.png" alt="Logo" /></a>
                    </div>
                    <div class="nav_right">
                        <div class="profile">
                            <a href="#" class="profile-image">
                                <img src="~/img/Profile Avatar.png" alt="Profile Image" />
                            </a>
                            <div class="user_info">
                                <h6> Anne Carmel</h6>
                                <p>Cheif Executive Officer</p>
                                <script>
                                    const username = localStorage.getItem("username");
                                    document.getElementById("username_display").textContent = username;
                                </script>
                            </div>
                        </div>
                        <div class="logout-icon">
                            <a href="/Account/Logout">
                                <img class="logout" src="~/img/Logout Icon.png" height="25px" alt="Logout" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="menubar_background">
            <div class="container">
                <ul class="menubar_emp">
                    <li class="menu_item"><a href="/Dashboard/Dashboard">Dashboard</a></li>

                    <li class="menu_item"><a href="/Employee/Employee">User Master</a></li>
                    <li class="menu_item"><a href="/Course/Course">Courses</a></li>
                    <li class="menu_item"><a href="/Session/Session">Scheduler</a></li>
                    <li class="menu_item"><a href="#">Exams</a></li>
                    <li class="menu_item"><a href="#">Reports</a></li>
                    <li class="menu_item"><a href="#">Ratings</a></li>
                    <li class="menu_item"><a href="/Login/Login">Login</a></li>
                </ul>
            </div>
        </div>
    </header>
    <!-- ✅ Header Ends -->
    <!-- ✅ Main Content Area -->
    <main role="main" class="container">
        @RenderBody()
    </main>

    <!-- ✅ Scripts (Bottom of Body) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
