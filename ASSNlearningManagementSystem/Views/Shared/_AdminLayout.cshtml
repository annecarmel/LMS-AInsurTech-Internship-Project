
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ALMS</title>

    <!-- Google Fonts & CSS Links -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
</head>
<body>
    <!-- ✅ Header Starts -->
    <header>
        <div class="nav_background">
            <div class="container">
                <div class="nav_emp">
                    <div class="logo">
                        <a href="#"><img src="~/img/ai  2 .png" alt="Logo" /></a>
                    </div>
                    <div class="nav_right">
                        <div class="profile">
                            <a href="#" class="profile-image"><img src="~/img/Profile Avatar.png" alt="Profile Image" /></a>
                            <div class="user_info">
                                <h6>@User.Identity.Name</h6>
                                <p>Asst.insurance officer</p>
                            </div>
                        </div>
                        <div class="logout-icon">
                            <a href="/Account/Logout"><img class="logout" src="~/img/Logout Icon.png" height="25px" alt="Logout" /></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="menubar_background">
            <div class="container">
                <ul class="menubar_emp">
                    <li class="menu_item"><a href="/Dashboard/Dashboard">Dashboard</a></li>
                    <li class="menu_item">
                        <a href="#">Masters</a>
                        <ul class="submenu">
                            <li><a href="#">Submenu item 1</a></li>
                            <li><a href="#">Submenu item 2</a></li>
                            <li><a href="#">Submenu item 3</a></li>
                            <li><a href="#">Submenu item 4</a></li>
                        </ul>
                    </li>
                    <li class="menu_item"><a href="/User/User">User Master</a></li>
                    <li class="menu_item"><a href="/Login/Login">Login</a></li>
                </ul>
            </div>
        </div>
    </header>
    <!-- ✅ Header Ends -->
    <!-- Main Content -->
    <main role="main" class="container">
        @RenderBody()
    </main>

    <!-- Optional: Scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
