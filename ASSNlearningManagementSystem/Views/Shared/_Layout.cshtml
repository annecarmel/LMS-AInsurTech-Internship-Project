
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ALMS</title>

    <!-- Google Fonts & CSS Links -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />

    <!-- ✅ Corrected CSS paths -->
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/responsive.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
</head>

<body>
    <!-- ✅ Header Starts -->
    <header>
        <div class="nav_background">
            <div class="container">
                <div class="nav_emp">
                    <div class="logo">
                        <a href="#"><img src="~/img/ai2.png" alt="Logo" /></a>
                    </div>
                    <div class="nav_right">
                        <div class="profile">
                            <a href="#" class="profile-image"><img src="~/img/Profile Avatar.png" alt="Profile Image" /></a>
                            <div class="user_info">
                                <h6>@ViewBag.UserName</h6>
                                <p>@ViewBag.UserRole</p>
                            </div>
                        </div>

                        <div class="logout-icon">
                            <a href="/Login/Login"><img class="logout" src="~/img/Logout Icon.png" height="25px" alt="Logout" /></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="menubar_background">
            <div class="container">
                <ul class="menubar_emp">


                    
                    <li class="menu_item"><a href="/Learner/Dashboard">Dashboard</a> </li>

                    <li class="menu_item"><a href="/Learner/CourseList">Courses</a></li>
                  
                  
                    <li class="menu_item"><a href="/Learner/MyEnrollments">My Courses</a></li>

                    <li class="menu_item"><a href="/Learner/TimeTable">Time Table</a> </li>


                    
                    <li class="menu_item"><a href="/Learner/ExamListing">Exams</a></li>
                        
                       <!-- <ul class="submenu">
                            <li><a href="#">Submenu item 1</a></li>
                            <li><a href="#">Submenu item 2</a></li>
                            <li><a href="#">Submenu item 3</a></li>
                            <li><a href="#">Submenu item 4</a></li>
                        </ul>-->
                  
                    
                    <li class="menu_item">
                        <a asp-controller="Result" asp-action="Result">Result</a>
                    </li>

                    
                    <li class="menu_item"><a href="/Login/Login">Login</a></li>

                </ul>
            </div>
        </div>

    </header>
    <!-- ✅ Header Ends -->
    <!-- Main Content -->
    <main role="main" class="container">
        @RenderBody()
    </main>

    <!-- Optional: Scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
