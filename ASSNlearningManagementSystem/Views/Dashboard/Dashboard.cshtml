@{
    Layout = "_AdminLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/responsive.css")" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
</head>

<body>
    <main>
        <div class="container">
            <div class="dashboard-contents">

                <!-- Top Cards -->
                <div class="hero_section">
                    <div class="number_card">
                        <div class="card1">
                            <div class="card1_left">
                                <img src="@Url.Content("~/img/Policies.png")" alt="Total Users" />
                            </div>
                            <div class="card1_right">
                                <h6>Total Users</h6>
                                <h1>@ViewBag.TotalUsers</h1>
                            </div>
                        </div>
                        <div class="card2">
                            <div class="card2_left">
                                <img src="@Url.Content("~/img/Claims.png")" alt="Courses" />
                            </div>
                            <div class="card2_right">
                                <h6>Active Courses</h6>
                                <h1>@ViewBag.ActiveCourses</h1>
                            </div>
                        </div>
                        <div class="card3">
                            <div class="card3_left">
                                <img src="@Url.Content("~/img/Settlement.png")" alt="Exams" />
                            </div>
                            <div class="card3_right">
                                <h6>Scheduled Exams</h6>
                                <h1>@ViewBag.ScheduledExams</h1>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Chart Section -->
                <div class="policy_card">
                    <div class="motor_card_box">
                        <div class="motor_text">
                            <h4>Course Enrollment</h4>
                        </div>
                        <div class="chart-container" id="chart">
                            <canvas id="enrollBarChart" style="width:100%; height:100%;"></canvas>
                        </div>
                    </div>

                    <div class="motor_card_box">
                        <h4 style="font-weight: bold; font-size: 20px;">Course Popularity by Department</h4>
                        <div class="chart-container" id="chart">
                            <canvas id="donutChart" style="width:100%; height:100%;"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Tables Section -->
                <div class="table_card">
                    <!-- Upcoming Exams Table -->
                    <div class="motor_card_box">
                        <div class="details">
                            <div class="details-header">
                                <h6>Upcoming Exams</h6>
                            </div>
                            <div class="table-responsive">
                                <table class="table" id="examTable">
                                    <thead>
                                        <tr>
                                            <th>Action</th>
                                            <th>Exam Title</th>
                                            <th>Exam Date</th>
                                            <th>Duration</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var exam in ViewBag.UpcomingExams)
                                        {
                                            <tr>
                                                <td>
                                                    <a href="#" title="Edit">
                                                        <img src="https://cdn-icons-png.flaticon.com/512/1159/1159633.png" alt="Edit" width="18" height="18" />
                                                    </a>
                                                </td>
                                                <td>@exam.Title</td>
                                                <td>@exam.Date.ToString("yyyy-MM-dd")</td>
                                                <td>@exam.Duration hrs</td>
                                                <td>@exam.Status</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Session Overview Table -->
                    <div class="motor_card_box">
                        <div class="details">
                            <div class="details-header">
                                <h6>Session Overview</h6>
                            </div>
                            <div class="table-responsive">
                                <table class="table" id="sessionTable">
                                    <thead>
                                        <tr>
                                            <th>Action</th>
                                            <th>Trainer</th>
                                            <th>Topic</th>
                                            <th>Students</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var session in ViewBag.SessionOverview)
                                        {
                                            <tr>
                                                <td>
                                                    <a href="#" title="Edit">
                                                        <img src="https://cdn-icons-png.flaticon.com/512/1159/1159633.png" alt="Edit" width="18" height="18" />
                                                    </a>
                                                </td>
                                                <td>@session.Trainer</td>
                                                <td>@session.Topic</td>
                                                <td>@session.Students</td>
                                                <td>@session.Status</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>

    <!-- Chart Logic -->
    <script>
        const enrollmentData = @Html.Raw(ViewBag.EnrollmentDataJson ?? "[]");
        const popularityData = @Html.Raw(ViewBag.PopularityDataJson ?? "[]");

        // Clean data: remove undefined or empty entries
        const filteredEnrollment = enrollmentData.filter(e => e.courseName && e.studentCount > 0);
        const filteredPopularity = popularityData.filter(p => p.courseName && p.department && p.studentCount > 0);

        // Bar Chart - Course Enrollment (hidden if no data)
        if (filteredEnrollment.length > 0) {
            const barLabels = filteredEnrollment.map(e => e.courseName);
            const barValues = filteredEnrollment.map(e => e.studentCount);

            new Chart(document.getElementById('enrollBarChart'), {
                type: 'bar',
                data: {
                    labels: barLabels,
                    datasets: [{
                        // REMOVE THE LABEL TO HIDE LEGEND
                        data: barValues,
                        backgroundColor: '#36A2EB'
                    }]
                },
                options: {
                    responsive: true,
                    legend: { display: false },
                    scales: {
                        yAxes: [{ ticks: { beginAtZero: true } }]
                    }
                }
            });
        }

                // Donut Chart - Course Popularity by Department (hidden if no data)
        if (filteredPopularity.length > 0) {
            const grouped = {};
            filteredPopularity.forEach(item => {
                const key = `${item.department}`;
                grouped[key] = (grouped[key] || 0) + item.enrollmentCount;
            });

            const donutLabels = Object.keys(grouped);
            const donutValues = Object.values(grouped);
            const colors = ['#FF6384', '#36A2EB', '#FFCE56', '#2ECC71', '#8E44AD', '#3498DB', '#F39C12', '#1ABC9C'];

            new Chart(document.getElementById('donutChart'), {
                type: 'doughnut',
                data: {
                    labels: donutLabels,
                    datasets: [{
                        data: donutValues,
                        backgroundColor: colors.slice(0, donutLabels.length)
                    }]
                },
                options: {
                    responsive: true,
                    legend: { display: false }
                }
            });
        }

    </script>

</body>
</html>
