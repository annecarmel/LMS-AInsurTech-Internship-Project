@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@{
    Layout = "_AdminLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Main Styles -->
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/responsive.css")" />

    <!-- Font Awesome (Icons) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

    <!-- Chart.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>

    <!-- Page-specific dashboard styles (Optional) -->
    <style>
        .chart-legend {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px;
            margin-top: 0;
        }

        .legend-item {
            display: flex;
            align-items: center;
            font-size: 14px;
            font-weight: 500;
            font-family: 'Poppins', sans-serif;
        }

        .color-box {
            width: 25px;
            height: 10px;
            margin-right: 6px;
            display: inline-block;
        }

        .motor_text {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            margin-bottom: 8px;
        }

            .motor_text h4 {
                margin: 0;
                font-size: 20px;
                font-weight: 600;
            }

        .pink-stars {
            color: #CD2F74;
        }

        .top-5-reviews table th,
        .top-5-reviews table td,
        .top-5-students table th,
        .top-5-students table td {
            text-align: center !important;
            vertical-align: middle;
        }
    </style>
</head>


<body>
    <main>
        <div class="container">
            <div class="dashboard-contents">

                <!-- Top Cards -->
                <div class="hero_section">
                    <div class="number_card">
                        <div class="card1">
                            <div class="card1_left">
                                <img src="@Url.Content("~/img/icons8-users-80.png")" alt="Total Users" />
                            </div>
                            <div class="card1_right">
                                <h6>Total Users</h6>
                                <h1>@ViewBag.TotalUsers</h1>
                            </div>
                        </div>
                        <div class="card2">
                            <div class="card2_left">
                                <img src="@Url.Content("~/img/icons8-course-64.png")" alt="Courses" />
                            </div>
                            <div class="card2_right">
                                <h6>Active Courses</h6>
                                <h1>@ViewBag.ActiveCourses</h1>
                            </div>
                        </div>
                        <div class="card3">
                            <div class="card3_left">
                                <img src="@Url.Content("~/img/icons8-exam-100.png")" alt="Exams" />
                            </div>
                            <div class="card3_right">
                                <h6>Scheduled Exams</h6>
                                <h1>@ViewBag.ScheduledExams</h1>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Chart Section -->
                <div class="policy_card">
                    <!-- Course Enrollment Bar Chart -->
                    <div class="motor_card_box">
                        <div class="motor_text">
                            <h4>Course Enrollment</h4>
                            <div class="chart-legend" id="barLegend"></div>
                        </div>
                        <div class="chart-container">
                            <canvas id="enrollBarChart"></canvas>
                        </div>
                    </div>

                    <!-- Course Popularity Pie Chart -->
                    <div class="motor_card_box">
                        <div class="motor_text">
                            <h4>Top 5 Courses by Enrollment</h4>
                            <div class="chart-legend" id="pieLegend"></div>
                        </div>
                        <div class="chart-container">
                            <canvas id="pieChart"></canvas>
                        </div>
                    </div>
                </div>

                <div class="table_card">

                    <!-- Top 5 Reviews -->
                    <div class="motor_card_box top-5-reviews">
                        <div class="details">
                            <div class="details-header">
                                <h6>Top 5 Reviews</h6>
                            </div>
                            <div class="table-responsive mt-3">
                                <table class="table table-striped align-middle text-center">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Student Name</th>
                                            <th>Course</th>
                                            <th>Rating</th>
                                            <th>Review</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.Top5Reviews != null)
                                        {
                                            foreach (var review in ViewBag.Top5Reviews)
                                            {
                                                <tr>
                                                    <td title="@review.StudentName">
                                                        @if (!string.IsNullOrEmpty(review.StudentName) && review.StudentName.Length > 20)
                                                        {
                                                            @($"{review.StudentName.Substring(0, 20)}...")
                                                        }
                                                        else
                                                        {
                                                            @review.StudentName
                                                        }
                                                    </td>
                                                    <td title="@review.CourseName">
                                                        @if (!string.IsNullOrEmpty(review.CourseName) && review.CourseName.Length > 20)
                                                        {
                                                            @($"{review.CourseName.Substring(0, 20)}...")
                                                        }
                                                        else
                                                        {
                                                            @review.CourseName
                                                        }
                                                    </td>
                                                    <td>
                                                        <span class="pink-stars">
                                                            @for (int i = 1; i <= 5; i++)
                                                            {
                                                                if (i <= review.Rating)
                                                                {
                                                                    <i class="fa fa-star"></i>
                                                                }
                                                                else
                                                                {
                                                                    <i class="fa fa-star-o"></i>
                                                                }
                                                            }
                                                        </span>
                                                    </td>
                                                    <td title="@review.Comment">
                                                        @if (!string.IsNullOrEmpty(review.Comment) && review.Comment.Length > 30)
                                                        {
                                                            @($"{review.Comment.Substring(0, 30)}...")
                                                        }
                                                        else
                                                        {
                                                            @review.Comment
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="4" class="text-center">No reviews available.</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Top 5 Students -->
                    <div class="motor_card_box top-5-students">
                        <div class="details">
                            <div class="details-header">
                                <h6>Top 5 Students</h6>
                            </div>
                            <div class="table-responsive mt-3">
                                <table class="table table-striped align-middle text-center">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Student Name</th>
                                            <th>Course</th>
                                            <th>Top Score</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.Top5Students != null)
                                        {
                                            foreach (var student in ViewBag.Top5Students)
                                            {
                                                <tr>
                                                    <td title="@student.StudentName">
                                                        @if (!string.IsNullOrEmpty(student.StudentName) && student.StudentName.Length > 20)
                                                        {
                                                            @($"{student.StudentName.Substring(0, 20)}...")
                                                        }
                                                        else
                                                        {
                                                            @student.StudentName
                                                        }
                                                    </td>
                                                    <td title="@student.CourseName">
                                                        @if (!string.IsNullOrEmpty(student.CourseName) && student.CourseName.Length > 20)
                                                        {
                                                            @($"{student.CourseName.Substring(0, 20)}...")
                                                        }
                                                        else
                                                        {
                                                            @student.CourseName
                                                        }
                                                    </td>
                                                    <td>@student.MarksObtained</td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="3" class="text-center">No student data available.</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>













                <!-- Tables Section -->
                <div class="table_card">
                    <div class="motor_card_box">
                        <div class="details">
                            <div class="details-header">
                                <h6>Upcoming Exams</h6>
                            </div>
                            <div class="table-responsive">
                                <table class="table" id="examTable">
                                    <thead>
                                        <tr>
                                            <th>Action</th>
                                            <th>Exam Title</th>
                                            <th>Exam Date</th>
                                            <th>Duration</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var exam in ViewBag.UpcomingExams)
                                        {
                                            <tr>
                                                <td>
                                                    <a href="#" class="edit-icon">
                                                        <img src="@Url.Content("~/img/edit Icon.png")" alt="Edit" width="15" height="15">
                                                    </a>
                                                </td>
                                                <td>@exam.Title</td>
                                                <td>@exam.Date.ToString("yyyy-MM-dd")</td>
                                                <td>@exam.Duration hrs</td>
                                                <td>@exam.Status</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="motor_card_box">
                        <div class="details">
                            <div class="details-header">
                                <h6>Session Overview</h6>
                            </div>
                            <div class="table-responsive">
                                <table class="table" id="sessionTable">
                                    <thead>
                                        <tr>
                                            <th>Action</th>
                                            <th>Trainer</th>
                                            <th>Topic</th>
                                            <th>Students</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var session in ViewBag.SessionOverview)
                                        {
                                            <tr>
                                                <td>
                                                    <a href="#" class="edit-icon">
                                                        <img src="@Url.Content("~/img/edit Icon.png")" alt="Edit" width="15" height="15">
                                                    </a>
                                                </td>
                                                <td>@session.Trainer</td>
                                                <td>@session.Topic</td>
                                                <td>@session.Students</td>
                                                <td>@session.Status</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>

    <!-- Chart Script -->
    <script>
        const enrollmentData = @Html.Raw(ViewBag.EnrollmentDataJson ?? "[]");
        const popularityData = @Html.Raw(ViewBag.PopularityDataJson ?? "[]");

        const filteredEnrollment = enrollmentData.filter(e => e.courseName && e.studentCount > 0);
        const filteredPopularity = popularityData.filter(p => p.courseName && p.studentCount > 0);

        const lmsPalette = [
            '#FF7F50', '#FF69B4', '#87CEFA', '#ADD8E6', '#FFB6C1',
            '#FF8C69', '#FFA07A', '#B0E0E6'
        ];

        function generateLegend(containerId, labels, colors) {
            const container = document.getElementById(containerId);
            container.innerHTML = labels.map((label, i) => `
                <span class="legend-item">
                    <span class="color-box" style="background-color:${colors[i % colors.length]}"></span>${label}
                </span>`).join('');
        }

        if (filteredEnrollment.length > 0) {
            const barLabels = filteredEnrollment.map(e => e.courseName);
            const barValues = filteredEnrollment.map(e => e.studentCount);
            const barColors = lmsPalette.slice(0, barLabels.length);

            new Chart(document.getElementById('enrollBarChart'), {
                type: 'bar',
                data: {
                    labels: barLabels,
                    datasets: [{
                        data: barValues,
                        backgroundColor: barColors
                    }]
                },
                options: {
                    responsive: true,
                    legend: { display: false },
                    scales: {
                        yAxes: [{ ticks: { beginAtZero: true } }]
                    }
                }
            });

            generateLegend('barLegend', barLabels, barColors);
        }

        if (filteredPopularity.length > 0) {
            const pieLabels = filteredPopularity.map(p => p.courseName);
            const pieValues = filteredPopularity.map(p => p.studentCount);
            const pieColors = lmsPalette.slice(0, pieLabels.length);

            new Chart(document.getElementById('pieChart'), {
                type: 'pie',
                data: {
                    labels: pieLabels,
                    datasets: [{
                        data: pieValues,
                        backgroundColor: pieColors
                    }]
                },
                options: {
                    responsive: true,
                    legend: { display: false }
                }
            });

            generateLegend('pieLegend', pieLabels, pieColors);
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>