@model ASSNlearningManagementSystem.Models.CourseLearnerViewModel

@{
    Layout = "_LeanersLayout";
    ViewData["Title"] = "Course Details";
}
<head>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />
</head>

<div class="container my-4">
    <h2 class="mb-4">Course Details</h2>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Course ID: @Model.CourseId - @Model.CourseName</h4>

            @{
                // Determine if the user has already enrolled in this course
                bool isEnrolled = Model.UserEnrollments != null && Model.UserEnrollments.Any(e => e.CourseId == Model.CourseId);
            }

            @if (isEnrolled)
            {
                <button type="button" disabled
    style="
        background-color: #c9c9c9; 
        color: #ffffff; 
        border: none; 
        border-radius: 24px; 
        padding: 5px 20px; 
        font-size: 12px; 
        cursor: not-allowed;
        opacity: 0.7;
    ">
    Already Enrolled
</button>

            }
            else
            {
                <form asp-action="Enroll" asp-controller="Learner" method="post" style="display:inline;"><input type="hidden" name="courseId" value="@Model.CourseId" /><button type="submit" style="background:#18AE90;color:#fff;border:none;border-radius:24px;padding:5px 20px;font-size:12px;cursor:pointer;">
Enroll</button></form>


                

            }
        </div>

        <div class="card-body">
            @if (Model.Syllabuses != null && Model.Syllabuses.Any())
            {
                foreach (var syllabus in Model.Syllabuses)
                {
                    <div class="card my-3 border-primary">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Syllabus: @syllabus.SyllabusName</h5>
                        </div>
                        <div class="card-body">
                            @if (syllabus.Topics != null && syllabus.Topics.Any())
                            {
                                <div class="table-responsive">
                                    <table class="emp_table">
                                        <thead>
                                            <tr>
                                                <th>Topic</th>
                                                <th>Assigned Trainer</th>
                                                <th>Session Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var topic in syllabus.Topics)
                                            {
                                                <tr>
                                                    <td>@topic.TopicName</td>
                                                    <td>@(topic.TrainerName ?? "N/A")</td>
                                                    <td>@(topic.SessionDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning mb-0">
                                    No topics available for this syllabus.
                                </div>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">
                    No syllabuses available for this course.
                </div>
            }
        </div>
    </div>
</div>
